-if notice
  %p#notice=notice

%h1
  Your Pragmatic Catalog
-if @count.to_i >= 5
  %h2 You have been here #{pluralize(@count.to_i, "time")}
  
- @products.each do |product|
  .entry
    = link_to(image_tag(product.image_url), line_items_path(:product_id => product), html_option = {:method => :post} )
    / = image_tag(product.image_url)
    %h3=product.title
    = sanitize(product.description)
    .price_line
      %span.price=number_to_currency(product.price)
      = button_to "Add to Cart", line_items_path(:product_id => product)
      
